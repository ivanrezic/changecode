<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hr.from.kkf.kingictapp.DetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp">


            <TextView
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teamname:"
                />

            <EditText
                android:id="@+id/teamNameDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Teamname"/>

            <TextView
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Member 1:"
                />

            <EditText
                android:id="@+id/name1Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Name"/>

            <EditText
                android:id="@+id/surname1Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Surname"/>

            <EditText
                android:id="@+id/email1Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Email"/>

            <TextView
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Member 2:"
                />

            <EditText
                android:id="@+id/name2Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Name"/>

            <EditText
                android:id="@+id/surname2Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Surname"/>

            <EditText
                android:id="@+id/email2Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Email"/>

            <TextView
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Member 3:"
                />

            <EditText
                android:id="@+id/name3Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Name"/>

            <EditText
                android:id="@+id/surname3Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Surname"/>

            <EditText
                android:id="@+id/email3Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Email"/>

            <TextView
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Member 4:"
                />

            <EditText
                android:id="@+id/name4Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Name"/>

            <EditText
                android:id="@+id/surname4Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Surname"/>

            <EditText
                android:id="@+id/email4Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Email"/>

            <TextView
                android:id="@+id/resultTextDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:visibility="invisible"
                android:text="Next task:"/>

            <TextView
                android:id="@+id/resultBodyDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web" />

            <EditText
                android:id="@+id/confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:hint="Link to repository"/>

            <Button
                android:id="@+id/confirmButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm"/>



        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
